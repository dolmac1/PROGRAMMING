#include <iostream>
#include <string>
using namespace std;

int main() {
	cin.tie(NULL);
	ios::sync_with_stdio(false);
	int n;
	cin >> n;
	for (int i = 0;i < n;i++) {
		int k;
		string data;
		cin >> k >> data;
		for (int j = 0;j < data.length();j++) {
			for (int t = 0;t < k;t++) {
				cout << data[j];
			}
		}
		cout << endl;
	}
	return 0;
}
