#include <iostream>
using namespace std;

int main() {
	cin.tie(NULL);
	ios::sync_with_stdio(false);
	int n;
	int maxval, maxloc;
	maxval = 0;
	maxloc = 0;
	for (int i = 0;i < 9;i++) {
		cin >> n;
		if (n > maxval) {
			maxval = n;
			maxloc = i+1;
		}
	}
	cout << maxval << endl << maxloc<<endl;
	return 0;
}
